function rockPaperScissors(num){
  const randomNo = Math.floor(Math.random() * 3) + 1;
  if(randomNo === 3 & num === 1){
  alert('You lose');
  }
  if(randomNo === 3 & num === 2){
    alert('You Win');
  }
  if(randomNo ===3 & num === 3){
    alert('Tie');
  }
  if(randomNo === 2 & num === 1){
    alert('You Win');
  }
  if(randomNo === 2 & num === 2){
    alert('Tie');
  }
  if(randomNo === 2 & num === 3){
    alert('You Lose');
  }
  if(randomNo === 1 & num === 1){
    alert('Tie');
  }
  if(randomNo === 1 & num === 2){
    alert('You Lose');
  }
  if(randomNo ===1 & num === 3){
    alert('You Win');
  }
  if(num > 3){
    alert('Please enter 1 for rock, 2 for paper, 3 for scissors');
  }
  if(num === 0){
    alert('Please enter 1 for rock, 2 for paper, 3 for scissors');
  }



}
